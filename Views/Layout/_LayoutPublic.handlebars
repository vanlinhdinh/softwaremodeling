<body>
    <form style="display:none;" id="frmLogout" method="post" action="/account/logout"></form>
    <form style="display:none;" id="formAddCart"method="POST" action="/cart/add">
        <input name="productID" id="addCartItem" type="hidden"/>
        <input name="quantity" value="1" type="hidden"/>
    </form>
    <div class="opacity-background">
        <div id="dm-header" class="d-flex justify-content-between">
            <p class="p-2">
            </p>
            <p class="p-2">

                {{#if layoutVM.isLogged}} Xin chào,
                <a class="color-purple" href="/account/profile">{{layoutVM.currentUser.FullName}}</a>
                <a id="lnkLogout" href="javascript:;">Đăng xuất</a>
                {{else}}
