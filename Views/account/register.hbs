<!DOCTYPE html>
<html>

<head>
    <title>Đăng ký</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Credit Login / Register Form Responsive Widget,Login form widgets, Sign up Web forms , Login signup Responsive web form,Flat Pricing table,Flat Drop downs,Registration Forms,News letter Forms,Elements"
    />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Custom Theme files -->
    <link href="/login/css/font-awesome.min.css" rel="stylesheet" type="text/css" media="all">
    <link href="/login/css/popuo-box.css" rel="stylesheet" type="text/css" media="all" />
    <link href="/login/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- //Custom Theme files -->
    <!-- web font -->
    <link href="/css/bootstrap.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="/asset/bootstrap-datepicker/css/bootstrap-datepicker3.min.css">
    <link href="//fonts.googleapis.com/css?family=Oswald:400,700" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
    <style>
        .table-condensed {}
    </style>
    <!-- //web font -->
</head>

<body>
    <h1>Mỹ phẫm Duyên Mây</h1>
    <div class="main-agileits">
        <!--form-stars-here-->
        <div class="form-w3-agile">
            <div class="contact-w3-agileits">
                <h3>Đăng ký</h3>
                <form action="#" method="post" onsubmit="return validate()">
                    <div class="form-sub-w3ls">
                        {{#if SHOWMESSAGE_isUserExsits}}
                        <div class="alert alert-danger" role="alert">
                            {{MESSAGE_isUserExsits}}
                        </div>
                        {{/if}}

                        {{#if SHOWMESSAGE_success}}
                        <div class="alert alert-success" role="alert">
                            {{MESSAGE_success}} <a href="/account/login">Đăng nhập</a>
                        </div>
                        {{/if}}
                        <span style="color:red" id="usernameAlert"></span>
                        <input name="Username" placeholder="Tên tài khoản" id="txtUsername" type="text" required="">
                        <div class="icon-agile">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="form-sub-w3ls">
                        <input name="Fullname" placeholder="Họ và tên" type="text" required="">
                        <div class="icon-agile">
                            <i class="fa fa-file-signature" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="form-sub-w3ls">
                        <input name="Email" placeholder="Email" class="mail" type="email" required="">
                        <div class="icon-agile">
                            <i class="fa fa-envelope-o" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="form-sub-w3ls">
                        <input name="Password" placeholder="Mật khẩu" id="txtPWD" type="password" required="">
                        <div class="icon-agile">
                            <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="form-sub-w3ls">
                         <span style="color:red" id="CPWDAlert"></span>
                        <input placeholder="Nhập lại mật khẩu" id="txtCPWD" type="password" required="">
                        <div class="icon-agile">
                            <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                        </div>
                    </div>

                    <div class="form-sub-w3ls">
                        <input name="Address" placeholder="Địa chỉ ở hiện tại" type="text" required="">
                        <div class="icon-agile">
                            <i class="fa fa-location-arrow" aria-hidden="true"></i>
                        </div>
                    </div>

                    <div id="DoBContainer" class="form-sub-w3ls" style="position:relative">
                        <input id="txtDOB" name="DoB" placeholder="Ngày sinh..." type="text" required="">
                        <div class="icon-agile">
                            <i class="fa fa-birthday-cake" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="g-recaptcha" data-sitekey="6LefdWAUAAAAADGh2Hkae9vLRShCfd7NOalzg-5z"></div>
                    {{!-- <div class="g-recaptcha" data-sitekey="6LefdWAUAAAAADGh2Hkae9vLRShCfd7NOalzg-5z"></div> --}}
                    <div class="submit-w3l">
                        <input type="submit" value="Đăng ký">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--//form-ends-here-->
    <!-- copyright -->
    <script type="text/javascript" src="/login/js/jquery-2.1.4.min.js"></script>
    <!-- pop-up-box -->
    <script src="/login/js/jquery.magnific-popup.js" type="text/javascript"></script>
    <!--//pop-up-box -->
    <script src="/Script/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.w3_play_icon,.w3_play_icon1,.w3_play_icon2').magnificPopup({
                type: 'inline',
                fixedContentPos: false,
                fixedBgPos: true,
                overflowY: 'auto',
                closeBtnInside: true,
                preloader: false,
                midClick: true,
                removalDelay: 300,
                mainClass: 'my-mfp-zoom-in'
            });

        });
    </script>
    
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <script src="/asset/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript">
        $('#txtDOB').datepicker({
            container: '#DoBContainer',
            format: 'd/m/yyyy',
            autoclose: true
        });

        var validate = function () {
            if ($('#txtUsername').val().length <= 6 || $('#txtUsername').val().length >= 24) {
                $('#usernameAlert').html('Nhập tên tài khoản từ 7 đến 24 ký tự');
                return false;
            }

            if ($('#txtPWD').val() !== $('#txtCPWD').val()) {
                 $('#CPWDAlert').html('Xác nhận mật khẩu không đúng');
                return false;
            }
            return true;
        }
    </script>
</body>

</html>