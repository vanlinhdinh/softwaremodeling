{{#section 'title'}} Thông tin cá nhân {{/section}}
<div id="profile-header">
    <h4 class="text-center">Thông tin cá nhân</h4>
</div>
 {{#with user}}
<Div class="row" id="profile">
    <div class="col-lg-4 text-center">
        <img src="/image/no-avatar.jpg">
        <a href="#" class="btn">Đổi avatar</a>
    </div>
    <div class="col-lg-8" id="profile-col-right">
        <h3 class="color-gray">{{FullName}}
            <small>
                <i class="fa fa-map-marker-alt"></i>&nbsp;Việt Nam</small>&Tab;
            <a href="/account/edit?id={{ID}}">
                <i class="fa fa-edit"></i>
            </a>
        </h3>

            <p class="color-gray">
                <strong>Tài khoản đăng nhập: </strong>{{f_Username}}</p>
            <p class="color-gray">
                <strong>Email: </strong>{{Email}}</p>
            <p class="color-gray">
                <strong>Địa chỉ: </strong>{{Address}}</p>
            <p class="color-gray">
                <strong>Ngày sinh: </strong>{{DoB}}</p>

            <a href="#" class="btn btn-sm btn-secondary">Đổi mật khẩu</a>
            <br />
            <h5 style="margin-top:1em;" class="color-purple">Thông tin đơn hàng</h5>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Trạng thái</th>
                            <th>Ngày đặt</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each ../order}}
                        <tr>
                            <td>{{ID}}</td>
                            {{#compareStatus Status 1}}
                            <td>
                                <i class="fa fa-spinner" style="color:darkturquoise"></i> Đang xử lý</td>
                            {{else}} 
                            {{#compareStatus Status 2}}
                            <td>
                            <i class="fa fa-check" style="color:chartreuse"></i> Đã gửi</td>

                            {{else}}
                            <td><i class="fa fa-times" style="color: red"></i> Đã hủy</td>
                            {{/compareStatus}}
                            {{/compareStatus}} 
                            <td>{{CreateDate}}</td>
                            <td>
                                <a href="/account/order?id={{ID}}">
                                    <i class="fa fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
    </div>
</Div>
{{/with}}