<button class="btn">Thử</button>
<form action="" method="POST" role="form">
    <div class="form-group">
        <label for="">Tên nhà sản xuất</label>
        <input type="text" class="form-control" id="" name="producerName" placeholder="Đông Á" required="">
    </div>

    <div class="form-group">
        <label for="">Địa chỉ</label>
        <input type="text" class="form-control" id="" name="producerAddress" placeholder="1/1 Ngăn Ván A, phường X quận Y" required="">
    </div>

    <div class="form-group">
        <label for="">Số điện thoại</label>
        <input type="text" class="form-control" id="" name="producerPhone" placeholder="0982634236">
    </div>

    <div class="form-group">
        <label for="">Email</label>
        <input type="text" class="form-control" id="" name="producerEmail" placeholder="abc@gmail.com">
    </div>
    <div class="form-group">
        <label for="">Địa chỉ website</label>
        <input type="text" class="form-control" id="" name="producerWebsite" placeholder="duongcongvu.com">
    </div>
    <a class="btn btn-default" href="/admin/Category" role="button">
        <span cclass="fa fa-arrow-left"></span>
        Danh sách nhà sản xuất
    </a>
    <button type="submit" class="btn btn-primary">
        <span class="fa fa-save"></span>
        Tạo mới
    </button>
</form>