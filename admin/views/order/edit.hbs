{{#with order}}
<form method="POST">
    <div class="form-group">
        <label>Mã đơn hàng</label>
        <input /type="text" name="ID" class="form-control" value="{{ID}}">
    </div>
    <div class="form-group">
        <label>Mã người dùng <a href="/admin/user/edit?id={{UserID}}" target="_blank"><i class="fa fa-eye"></i></a></label>
        <input /type="text" name="UserID" class="form-control" value="{{UserID}}">
    </div>
    <div class="form-group">
        <label>Trạng thái đơn hàng</label>
        <select class="form-control" name="Status">
            <option selected disabled>-- Chọn Trạng thái--</option>
            <option value="1"><i class="fa fa-spinner" style="color:darkturquoise"></i> Đang xử lý</option>
            <option value="2"><i class="fa fa-check" style="color:chartreuse"></i> Đã gửi </option>
            <option value="3"><i class="fa fa-times" style="color: red"></i> Đã hủy</option>
        </select>
    </div>
    <div class="form-group">
        <label>Ngày tạo</label>
        <input /type="text" name="CreateDate" class="form-control" value="{{CreateDate}}">
    </div>
     <a class="btn btn-default" href="/admin/order" role="button">
        <span class="fa fa-arrow-left"></span>
        Xem danh sách đơn hàng
    </a>
    <button type="submit" class="btn btn-primary">
        <span class="fa fa-save"></span>
        Lưu lại
    </button>
</form>
{{/with}}